<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="CustomerBarChartController">
    <center>
        <BarChart fx:id="barChart" title="Customer Age Distribution">
            <xAxis>
                <CategoryAxis label="Age"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Customers"/>
            </yAxis>
        </BarChart>
    </center>

    <bottom>
        <Button text="View Table" onAction="#switchToTableView"/>
    </bottom>
</BorderPane>
